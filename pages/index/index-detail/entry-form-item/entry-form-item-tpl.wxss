.entryform-box{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.entryform-normal{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  position: fixed;
  z-index: 4001;
}
.sharebtn{
  display: flex;
  flex: 0 0 30%;
  justify-content: center;
  width: 180rpx;
  min-height: 80rpx;
  border-radius: 5rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #a6eafd;
}
.entrybtn{
  display: flex;
  flex: 0 0 70%;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  width: 240rpx;
  background-color: #ff0000;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}

.entry-panel-mask{
  position: fixed;
  top: 0;
  z-index: 4000;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  opacity: 0;
  transition: opacity 0.2s linear;
  visibility: hidden;
}
.entry-panel-mask.show{
  opacity: 1;
  visibility: visible;
}
.entryform-panel{
  position: relative;
  z-index: 4001;
  width: 100%;
  background-color: #fff;
}
.require{
  height: 180rpx;
}
.workday{
  height: 180rpx;
}
.chooseaddr{
  height: 180rpx;
}